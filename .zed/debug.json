// Project-local debug tasks
//
// For more documentation on how to configure debug tasks,
// see: https://zed.dev/docs/debugger
[
  {
    "adapter": "Debugpy",
    "label": "FastApi",
    "request": "launch",
    "debugAdapterPath": "${ZED_WORKTREE_ROOT}/.venv/bin/debugpy",
    "module": "fastapi",
    "args": ["dev", "main.py"],
    "console": "integratedTerminal"
  },
  {
    "adapter": "Debugpy",
    "label": "Attach",
    "request": "attach",
    "debugAdapterPath": "/usr/bin/debugpy",
    "connect": {
      "host": "localhost",
      "port": 5678
    },
    "pathMappings": [
      {
        "localRoot": "${ZED_WORKTREE_ROOT}",
        "remoteRoot": "/workspace"
      }
    ]
  }
]
